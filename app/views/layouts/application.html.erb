<!DOCTYPE html>
<html>
  <head>
    <title>MovieBookingSystem</title>
    <%= csrf_meta_tags %>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <style type="text/css">
      .footer {
         position: fixed;
         left: 0;
         bottom: 0;
         width: 100%;
         background-color: lightgrey;
         text-align: center;
        }
    </style>
  </head>

  <body>

    <h2 style="text-align: center;"><span class="label label-default">Movie Booking System</span></h2>
  	<p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <div> 
      <%= link_to "Home", home_index_path, class: 'btn btn-success btn-md' %>
    </div>
    <% if user_signed_in? %>
  	  <div style="text-align: right;">
  	   <%= link_to('Logout', destroy_user_session_path, method: :delete, class: "btn btn-md btn-info") %>
       <%= link_to "Go to Add Movie", movies_path, class: 'btn btn-md btn-success' %>
  	  </div>
  	<% else %>
  	  <div style="text-align: right;">
    	  <%= link_to('Login', new_user_session_path, class: 'btn btn-md btn-info') %>
        <%= link_to "Go to Add Movie", movies_path, class: 'btn btn-md btn-success' %>
  	  </div>
  	<% end %>

    <%= yield %>
    <div class="footer">
      <p>Created by @pradnya-madnaik</p>
    </div>
  </body>
</html>
