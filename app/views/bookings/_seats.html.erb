<% @booked_seats.each do |seat| %>
<script type="text/javascript">
	$('.selected_seats_<%= seat.price %>_<%= seat.seat_no %>').prop("disabled", true);
	$('.selected_seats_<%= seat.price %>_<%= seat.seat_no %>').parent().addClass("redBackground");
</script>
<% end %>