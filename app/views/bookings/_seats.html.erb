<fieldset> 
	<legend>Lower - Rs 150/- </legend>
	<div class="field">
	<%  counter = 0 %>
	<% for i in 1..30 %>
		<span>
			<span style="position: relative;left: 40px;bottom: 20px;"> <%= i %> </span>
			<input type="checkbox" name="booking[selected_seats][150][]" value="<%= i %>" class="selected_seats_150_<%= i %>" style="height: 50px;width: 50px"/>
		</span>
		<%  counter = counter + 1 %>
		<% if counter == 10 %>
		<br>
		<% counter = 0 %>
		<% end %>
	<% end %>
	</div>
</fieldset></br>

